<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/administrator/components/com_gift/models/fields">
    <fieldset name="left_fields" >
		<field name="id"
			   type="hidden"
			   label="JGLOBAL_FIELD_ID_LABEL"
			   description="JGLOBAL_FIELD_ID_DESC"
			   size="10"
			   default="0"
			   readonly="true"
			   class="readonly"
		/>


		<field name="name"
			   type="text"
			   label="Title"
			   default=""
			   required="true"
		/>

		<field name="alias"
			   type="text"
			   label="Alias"
			   default=""
			   required="true"
		/>

		<field name="published" type="radio"
			   class="btn-group btn-group-yesno"
			   label="Published"
			   default="0"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="group_id"
			   type="groups"
			   label="Category"
			   default=""
			   required="true"
		/>

		<field name="amount"
			   type="text"
			   label="Amount"
			   default=""
		/>

		<field name="list_image"
			   type="media"
			   label="List Image"
			   default=""
		/>

		<field name="big_image"
			   type="media"
			   label="Cover Image"
			   default=""
		/>

		<field name="currency" type="list" label="Currency"
			   size="1" default="GEL"
		>
			<option value="GEL">
				GEL</option>
			<option value="USD">
				USD</option>
			<option value="EUR">
				EUR</option>
		</field>


	</fieldset>

	<fieldset name="right_fields" >

		<field name="description"
			   type="editor"
			   size="1"
			   label="Description"
			   default=""
			   filter="JComponentHelper::filterText"
		/>



	</fieldset>

</form>
